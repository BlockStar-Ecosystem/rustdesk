[Unit]
Description=BlockStar Desktop
Requires=network.target
After=systemd-user-sessions.service

[Service]
Type=simple
ExecStart=/usr/bin/blockstardesktop --service
ExecStop=pkill -f "blockstardesktop --"
PIDFile=/run/blockstardesktop.pid
KillMode=mixed
TimeoutStopSec=30
User=root
LimitNOFILE=100000
Environment="PULSE_LATENCY_MSEC=60" "PIPEWIRE_LATENCY=1024/48000"

[Install]
WantedBy=multi-user.target
